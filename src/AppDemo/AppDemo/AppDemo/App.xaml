             x:Class="AppDemo.App">
    <Application.Resources>
        <x:String x:Key="ApplicationName">Safe Account Manager</x:String>

        <Color x:Key="BackgroundColorLight">White</Color>
        <Color x:Key="BackgroundColorDark">#202124</Color>

        <Color x:Key="PrimaryColorLight">Black</Color>
        <Color x:Key="PrimaryColorDark">White</Color>

        <Color x:Key="BarColorLight">#E6E6E6</Color>
