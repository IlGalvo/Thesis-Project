<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppDemo.Page1">
    <ContentPage.Content>
        <StackLayout Margin="30"
                     Spacing="100"
                     VerticalOptions="CenterAndExpand">
            <StackLayout>
                <Label Text="Text1: "
                       FontSize="Title"/>
                <Editor Text="{Binding Text1}"
                            IsReadOnly="True"
                            AutoSize="TextChanges"/>
            </StackLayout>

            <StackLayout>
                <Label Text="Text2: "
                       FontSize="Title"/>
                <Editor Text="{Binding Text2}"
                            IsReadOnly="True"
                            AutoSize="TextChanges"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>